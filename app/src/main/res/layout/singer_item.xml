<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_marginBottom="8dp"

    android:background="#FFFFFF"
    android:gravity="clip_vertical"
    android:orientation="horizontal"
    android:padding="8dp"
    android:weightSum="1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="8dp"

        android:background="#FFFFFF"
        android:gravity="clip_vertical|center_vertical"
        android:orientation="horizontal"
        android:padding="8dp"
        android:weightSum="1">

        <LinearLayout
            android:layout_width="240dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/itemTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="디데이"
                android:textColor="@color/themesColorDark"
                android:textColorHint="#5A5C69"
                android:textSize="30sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/itemDDate_Year"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="Y"
                    android:textColor="#A7A7A7"
                    android:textSize="24sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="-"
                    android:textColor="#A7A7A7"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/itemDDate_Month"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="M"
                    android:textColor="#A7A7A7"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_weight="1"
                    android:text="-"
                    android:textColor="#A7A7A7"
                    android:textSize="24sp" />

                <TextView
                    android:id="@+id/itemDDate_Day"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="D"
                    android:textColor="#A7A7A7"
                    android:textSize="24sp" />

            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/itemResult"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"

            android:backgroundTintMode="add"


            android:hint="d-day"

            android:textColor="#161A29"
            android:textSize="34sp"
            android:textStyle="normal" />

    </LinearLayout>

</LinearLayout>